<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenuFragment">

    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.car_001.ui.main.MainMenuFragment"
        android:label="Car Safety System"
        tools:layout="@layout/fragment_main_menu">
        
        <action
            android:id="@+id/action_mainMenuFragment_to_publisherFragment"
            app:destination="@id/publisherFragment" />
            
        <action
            android:id="@+id/action_mainMenuFragment_to_subscriberFragment"
            app:destination="@id/subscriberFragment" />
            
        <action
            android:id="@+id/action_mainMenuFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/publisherFragment"
        android:name="com.example.car_001.ui.publisher.PublisherFragment"
        android:label="Publisher Mode"
        tools:layout="@layout/fragment_publisher">
        
        <action
            android:id="@+id/action_publisherFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/subscriberFragment"
        android:name="com.example.car_001.ui.subscriber.SubscriberFragment"
        android:label="Subscriber Mode"
        tools:layout="@layout/fragment_subscriber">
        
        <action
            android:id="@+id/action_subscriberFragment_to_mapFragment"
            app:destination="@id/mapFragment">
            <argument
                android:name="latitude"
                app:argType="float"
                android:defaultValue="0.0" />
            <argument
                android:name="longitude"
                app:argType="float"
                android:defaultValue="0.0" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.car_001.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.car_001.ui.map.MapFragment"
        android:label="Crash Location"
        tools:layout="@layout/fragment_map">
        
        <argument
            android:name="latitude"
            app:argType="float"
            android:defaultValue="0.0" />
        <argument
            android:name="longitude"
            app:argType="float"
            android:defaultValue="0.0" />
    </fragment>

</navigation> 